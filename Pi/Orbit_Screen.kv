#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<Orbit_Screen>:
    name: 'orbit'
    FloatLayout:
        Image:
            ##source: './imgs/iss2.png'
            allow_stretch: True
            keep_ratio: False
        Label:
            pos_hint: {"center_x": 0.15, "center_y": 0.8}
            text: 'Orbit Stuff'
            markup: True
            color: 1,0,1
            font_size: 30
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"Left": 1, "Bottom": 1}
            text: 'Return'
            font_size: 30
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            source: './imgs/SignalRedGray.png'
            size_hint_y: 0.12
