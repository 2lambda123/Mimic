#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<LED_Screen>:
    name: 'led'
    FloatLayout:
        Image:
            id: LED_Background
            source: "/home/pi/Mimic/Pi/imgs/led/LEDbackground.png"
            fit_mode: "fill"
        Image:
            id: arduino
            source: "/home/pi/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint: None, 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"x": 0.12, "y": 0.0}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            size_hint: None, 0.15
            pos_hint: {"x": 0.12, "y": 0.0}
            text: ''
            markup: True
            color: 1,1,1
            font_size: 55
        Button:
            size_hint: 0.1,0.11
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: app.root.current = 'main'
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            fit_mode: "scale-down"
