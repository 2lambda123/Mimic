<RS_Screen>:
    name: 'rs'
    FloatLayout:
        Image:
            source: '/home/pi/Mimic/Pi/imgs/russian/ROSbackground.png'
            allow_stretch: False
            keep_ratio: True
        Button:
            background_normal: '/home/pi/Mimic/Pi/imgs/russian/DockingUnlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/russian/DockingDown.png'
            size_hint: 0.15,0.18
