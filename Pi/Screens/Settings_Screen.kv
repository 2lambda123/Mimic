#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window

<Settings_Screen>:
    name: 'settings'
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: '/home/pi/Mimic/Pi/imgs/SettingsBackground.png'
            allow_stretch: False
            keep_ratio: True
        Label:
            text: ''
            pos_hint: {"center_x": 0.5,"center_y":0.8}
            bold: True
            font_size: 120
            markup: True
            height: "20dp"
            color: 1,0,1
            width: "100dp"
        Label:
            text: "Smartflip (check to enable smooth 0 crossing)"
            pos_hint: {"center_x": 0.35,"center_y":0.5}
        CheckBox:
            id: smartflip
            pos_hint: {"center_x": 0.1,"center_y": 0.5}
            size_hint_y: None
            height: '64dp'
            on_active: root.checkbox_clicked(self,self.active)
    TextInput:
        id: lat_input1
        pos_hint: {'center_x': 0.2, 'y': 0.4}
        size_hint: (0.1, 0.06)
        cursor_blink: True
        font_size: 15
        multiline: False
    TextInput:
        id: lat_input2
        pos_hint: {'center_x': 0.4, 'y': 0.4}
        size_hint: (0.1, 0.06)
        cursor_blink: True
        font_size: 15
        multiline: False
    TextInput:
        id: text_input
        pos_hint: {'center_x': 0.85, 'y': 0.25}
        size_hint: (0.2, 0.06)
        cursor_blink: True
        font_size: 15
        multiline: False
    Label:
        size_hint: (0.2, 0.06)
        pos_hint: {'center_x': 0.85, 'y': 0.2}
        text: "Manual Angle Entry"
    Button:
        size_hint: 0.1,0.11
        ##pos_hint: {"Left": 1, "Bottom": 1}
        pos_hint: {"center_x": 0.9375, "center_y": 0.082}
        background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
        text: ''
        font_size: 30
        on_release: app.root.current = 'mimic'
