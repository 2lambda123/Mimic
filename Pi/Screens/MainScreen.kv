#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window

<MainScreen>:
    name: 'main'
    FloatLayout:
        orientation: 'vertical'
        Image:
            source: './imgs/ISSmimicLogoPartsGroundtrackLightBlue.png'
            allow_stretch: False
            keep_ratio: True
            pos_hint: {"center_x": 0.5, "center_y": 0.82}
        Image:
            id: ISStiny
            source: './imgs/ISSmimicLogoPartsGlowingISSblue.png'
            keep_ratio: False
            allow_stretch: True
            size_hint: 0.07,0.07
            pos_hint: {"center_x": 0.25, "center_y": 0.25}
        Image:
            id: ISStiny2
            source: './imgs/ISSmimicLogoPartsGlowingISSblue.png'
            keep_ratio: False
            allow_stretch: True
            size_hint: 0.0,0.0
            pos_hint: {"center_x": 0.25, "center_y": 0.25}
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"center_x": 0.2, "center_y": 0.3}
            text: 'Fake Orbit'
            font_size: 30
            width: 50
            height: 20
            on_release: root.manager.current = 'fakeorbit'
        Button:
            size_hint: 0.1,0.15
            pos_hint: {"center_x": 0.9, "center_y": 0.3}
            background_normal: './imgs/Settings_Icon.png'
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 0
                    axis: 0,0,1
                    origin: self.center
            canvas.after:
                PopMatrix
            text: ''
            on_release: root.manager.current = 'settings'
        BoxLayout:
            size_hint_y: None
            Button:
                text: 'Control'
                font_size: 30
                width: 50
                height: 20
                on_press: root.changeManualControlBoolean(True)
                on_release: root.manager.current = 'manualcontrol'
            Button:
                text: 'Calibrate'
                font_size: 30
                width: 50
                height: 20
                on_release: root.manager.current = 'calibrate'
                on_release: my_button.disabled = False
            Button:
                id: my_button
                text: 'Mimic'
                disabled: False
                font_size: 30
                width: 50
                height: 20
                on_release: app.root.current = 'mimic'
            Button:
                text: 'Exit'
                font_size: 30
                width: 50
                height: 20
                on_press: root.killproc()
                on_release: app.stop(*args)
