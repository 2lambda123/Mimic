#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<MimicScreen>:
    name: 'mimic'
    FloatLayout:
        Image:
            id: Mimic_background
            source: '/home/pi/Mimic/Pi/imgs/mimic/MimicBase.png'
            allow_stretch: False
            ##size_hint_y: 1
            ##keep_ratio: False
        Button:
            id: EPS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.15, "center_y": 0.62}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/EPSunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/EPSdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'eps'
        Button:
            id: Crew_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.15, "center_y": 0.48}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/CrewUnlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/CrewDown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'crew'
        Button:
            id: CT_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.33, "center_y": 0.62}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/CTunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/CTdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'ct'
        Button:
            id: EVA_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.33, "center_y": 0.48}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/EVAunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/EVAdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'eva_main'
        Button:
            id: TCS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.68, "center_y": 0.62}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/TCSunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/TCSdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'tcs'
        Button:
            id: ISS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.5, "center_y": 0.62}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/TCSunlit.png'
            ##background_down: '/home/pi/Mimic/Pi/imgs/mimic/TCSdown.png'
            text: 'ISS'
            font_size: 30
            on_release: root.manager.current = 'iss'
        Button:
            id: ECLSS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.5, "center_y": 0.48}
            ##background_normal: '/home/pi/Mimic/Pi/imgs/mimic/TCSunlit.png'
            ##background_down: '/home/pi/Mimic/Pi/imgs/mimic/TCSdown.png'
            text: 'ECLSS'
            font_size: 30
            on_release: root.manager.current = 'eclss'
        Button:
            id: ROS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.68, "center_y": 0.48}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/RSOSunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/RSOSdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'rs'
        Button:
            id: GNC_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.855, "center_y": 0.62}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/GNCunlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/GNCdown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'gnc'
        Button:
            id: Orbit_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.855, "center_y": 0.48}
            background_normal: '/home/pi/Mimic/Pi/imgs/mimic/OrbitUnlit.png'
            background_down: '/home/pi/Mimic/Pi/imgs/mimic/OrbitDown.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'orbit'
        Button:
            id: MT_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.5, "center_y": 0.34}
            text: 'MT'
            font_size: 30
            on_release: root.manager.current = 'mt'
        Button:
            id: mimicstartbutton
            size_hint: 0.15,0.1
            pos_hint: {"center_x": 0.25, "center_y": 0.2}
            text: 'Transmit'
            disabled: False
            font_size: 20
            on_release: mimicstartbutton.text = 'Sending...'
            on_release: root.changeMimicBoolean(True)
            on_release: mimicstopbutton.disabled = False
            on_release: mimicstartbutton.disabled = True
        Button:
            id: mimicstopbutton
            size_hint: 0.15,0.1
            pos_hint: {"center_x": 0.40, "center_y": 0.2}
            text: 'Stop'
            disabled: True
            font_size: 20
            on_release: mimicstartbutton.text = 'Transmit'
            on_release: root.changeMimicBoolean(False)
            on_release: mimicstopbutton.disabled = True
            on_release: mimicstartbutton.disabled = False
        Button:
            id: startTelemetry
            size_hint: 0.15,0.1
            pos_hint: {"center_x": 0.60, "center_y": 0.2}
            text: 'Start Telem'
            font_size: 20
            width: 50
            height: 20
            on_release: stopTelemetry.disabled = False
            on_release: self.disabled = True
            on_release: root.startproc()
        Button:
            id: stopTelemetry
            size_hint: 0.15,0.1
            pos_hint: {"center_x": 0.75, "center_y": 0.2}
            text: 'Stop Telem'
            font_size: 20
            width: 50
            height: 20
            disabled: True
            on_release: startTelemetry.disabled = False
            on_release: self.disabled = True
            on_release: root.killproc()
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: root.changeMimicBoolean(False)
            on_release: mimicstartbutton.text = 'Transmit'
            on_release: mimicstopbutton.disabled = True
            on_release: mimicstartbutton.disabled = False
            on_release: startTelemetry.disabled = False
            on_release: stopTelemetry.disabled = True
            on_release: root.killproc()
            on_release: app.root.current = 'main'
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/signalred.zip"
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: "/home/pi/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: 55
