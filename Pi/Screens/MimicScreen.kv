#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<MimicScreen>:
    name: 'mimic'
    FloatLayout:
        id: mimicscreenlayout
        Image:
            source: '/home/pi/Mimic/Pi/imgs/ISSmimicLogoPartsGroundtrackLightBlue.png'
            allow_stretch: False
            keep_ratio: True
            pos_hint: {"center_x": 0.5, "center_y": 0.82}
        Image:
            id: ISStiny
            source: '/home/pi/Mimic/Pi/imgs/ISSmimicLogoPartsGlowingISSblue.png'
            keep_ratio: False
            allow_stretch: True
            size_hint: 0.07,0.07
            pos_hint: {"center_x": 0.25, "center_y": 0.25}
        Label:
            id: iss_over_country
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            text: ''
            markup: True
            color: 1,0,1
            font_size: 30
        Button:
            id: EPS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.12, "center_y": 0.65}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/EPSunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'eps'
        Button:
            id: Crew_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.12, "center_y": 0.40}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/CrewUnlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'crew'
        Button:
            id: CT_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.375, "center_y": 0.65}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/CTunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'ct'
        Button:
            id: EVA_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.375, "center_y": 0.40}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/EVAunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'eva_main'
        Button:
            id: TCS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.625, "center_y": 0.65}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/TCSunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'tcs'
        Button:
            id: ROS_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.625, "center_y": 0.40}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/RSOSunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'rs'
        Button:
            id: GNC_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.88, "center_y": 0.65}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/GNCunlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'tcs'
        Button:
            id: Orbit_button
            size_hint: 0.15,0.13
            pos_hint: {"center_x": 0.88, "center_y": 0.40}
            background_normal: '/home/pi/Mimic/Pi/imgs/unsorted/OrbitUnlit.png'
            text: ''
            font_size: 30
            on_release: root.manager.current = 'orbit'
        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            text: 'ISS Information'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: velocity_label
            pos_hint: {"center_x": 0.35, "center_y": 0.44}
            text: 'Speed'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: velocity_value
            pos_hint: {"center_x": 0.6, "center_y": 0.44}
            text: '0.00'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: altitude_label
            pos_hint: {"center_x": 0.35, "center_y": 0.38}
            text: 'Altitude'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: altitude_value
            pos_hint: {"center_x": 0.6, "center_y": 0.38}
            text: '0.00'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmass_label
            pos_hint: {"center_x": 0.35, "center_y": 0.32}
            text: 'Total Mass'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmass_value
            pos_hint: {"center_x": 0.6, "center_y": 0.32}
            text: '0.00 kg'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmode_label
            pos_hint: {"center_x": 0.35, "center_y": 0.26}
            text: 'Station Mode'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmode_value
            pos_hint: {"center_x": 0.6, "center_y": 0.26}
            text: 'Standard'
            markup: True
            color: 1,1,1
            font_size: 20
        Button:
            id: mimicstartbutton
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.12, "center_y": 0.15}
            text: 'Transmit'
            disabled: False
            font_size: 20
            on_release: mimicstartbutton.text = 'Sending...'
            on_release: root.changeMimicBoolean(True)
            on_release: mimicstopbutton.disabled = False
            on_release: mimicstartbutton.disabled = True
        Button:
            id: mimicstopbutton
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.27, "center_y": 0.15}
            text: 'Stop'
            disabled: True
            font_size: 20
            on_release: mimicstartbutton.text = 'Transmit'
            on_release: root.changeMimicBoolean(False)
            on_release: root.changeSwitchBoolean(False)
            on_release: mimicstopbutton.disabled = True
            on_release: mimicstartbutton.disabled = False
        Button:
            id: fakeBGAstart
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.72, "center_y": 0.15}
            text: 'Start BGA'
            font_size: 20
            width: 50
            height: 20
            on_release: fakeBGAstop.disabled = False
            on_release: startTelemetry.disabled = True
            on_release: self.disabled = True
            ##on_release: root.killproc()
            on_release: root.startBGA()
        Button:
            id: fakeBGAstop
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.87, "center_y": 0.15}
            text: 'Stop BGA'
            font_size: 20
            disabled: True
            width: 50
            height: 20
            on_release: fakeBGAstart.disabled = False
            on_release: startTelemetry.disabled = False
            on_release: self.disabled = True
            on_release: root.stopBGA()
        Button:
            id: startTelemetry
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.42, "center_y": 0.15}
            text: 'Start Telem'
            font_size: 20
            width: 50
            height: 20
            on_release: stopTelemetry.disabled = False
            on_release: fakeBGAstart.disabled = True
            on_release: self.disabled = True
            ##on_release: root.killproc()
            on_release: root.startproc()
        Button:
            id: stopTelemetry
            size_hint: 0.1,0.1
            pos_hint: {"center_x": 0.57, "center_y": 0.15}
            text: 'Stop Telem'
            font_size: 20
            width: 50
            height: 20
            disabled: True
            on_release: startTelemetry.disabled = False
            on_release: fakeBGAstart.disabled = False
            on_release: self.disabled = True
            on_release: root.killproc()
        Button:
            size_hint: 0.1,0.11
            ##pos_hint: {"right":1, "bottom":1}
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: root.changeMimicBoolean(False)
            on_release: root.changeSwitchBoolean(False)
            on_release: app.root.current = 'main'
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/signalred.zip"
            ##size_hint_y: 0.15
            size_hint_y: 0.112
            anim_delay: 0.05
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
