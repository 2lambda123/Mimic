#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<EVA_Main_Screen>:
    name: 'eva_main'
    FloatLayout:
        Image:
            id: EVA_background
            source: '/home/pi/Mimic/Pi/imgs/eva/GenericEVAexample.png'
            allow_stretch: False
            ##size_hint_y: 1
            ##keep_ratio: False
        Button:
            id: US_EVA_Button
            size_hint: 0.1,0.1
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.75, "center_y": 0.085}
            ##background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: 'US EVA'
            font_size: 30
            on_release: app.root.current = 'us_eva'
        Button:
            id: RS_EVA_Button
            size_hint: 0.1,0.1
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.9, "center_y": 0.085}
            ##background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: 'RS EVA'
            font_size: 30
            on_release: app.root.current = 'rs_eva'
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.05
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Button:
            size_hint: 0.1,0.1
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.32, "center_y": 0.085}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: app.root.current = 'mimic'
