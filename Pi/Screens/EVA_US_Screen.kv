#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<EVA_US_Screen>:
    name: 'us_eva'
    FloatLayout:
        Image:
            id: US_EVA_background
            source: './imgs/eva/USpageEVAbase.png'
            allow_stretch: False
            ##size_hint_y: 1
            ##keep_ratio: False
        Image:
            id: EVA_needle
            source: './imgs/eva/GuageNeedle.png'
            pos_hint: {"center_x": 0.83, "center_y": 0.583}
            size_hint_x: 0.24 
            allow_stretch: False
            keep_ratio: True
            angle: 180
            canvas.before:
                PushMatrix
                Rotate:
                    angle: self.angle
                    axis: 0,0,-1
                    origin: self.center
            canvas.after:
                PopMatrix
        Image:
            id: Crewlock_Status_image
            source: './imgs/eva/BlankLights.png'
            size_hint_y: 0.14
            pos_hint: {"center_x": 0.83, "center_y": 0.8}
            allow_stretch: False
            keep_ratio: True
        Image:
            id: EVA_psi_bar
            source: './imgs/eva/GuageBar.png'
            size_hint_y: 0.15
            pos_hint: {"center_x": 0.945, "center_y": 0.56}
            ##pos_hint_x: 0.71
            ##pos_hint_y: 0.552
            allow_stretch: False
            keep_ratio: True
        Label:
            id: crewlockpressure_value
            pos_hint: {"center_x": 0.83, "center_y": 0.56}
            text: '0.00'
            markup: True
            color: 1,1,1
            font_size: 20
        Image:
            id: Hold_bar
            source: './imgs/eva/GuageBar.png'
            size_hint_y: 0.15
            pos_hint: {"center_x": 0.95, "center_y": 0.49}
            allow_stretch: False
            keep_ratio: True
        Label:
            id: leak_timer
            pos_hint: {"center_x": 0.83, "center_y": 0.49}
            text: '~260s Leak Check'
            markup: True
            color: 0,0,0
            font_size: 20
        Label:
            pos_hint: {"center_x": 0.83, "center_y": 0.65}
            text: '(psi)'
            markup: True
            color: 0,0,0
            font_size: 14
        Label:
            id: pumpswitch
            pos_hint: {"center_x": 0.55, "center_y": 0.55}
            size_hint: 0.3,0.15
            text: 'Airlock Pump Switch Off'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 20
        Label:
            id: pumpvoltage
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            size_hint: 0.3,0.15
            text: 'Airlock Pump Power Off'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 20
        AsyncImage:
            id: EV1_Pic
            source: "http://pbs.twimg.com/media/DJm3BvbXkAAuMzp.jpg"
            size_hint_y: 0.17
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": 0.764, "center_y": 0.241}
        Label:
            id: EV1_name
            pos_hint: {"center_x": 0.763, "center_y": 0.12}
            text: 'EV1'
            markup: True
            color: 0,0,0
            font_size: 18
        AsyncImage:
            id: EV2_Pic
            source: "http://pbs.twimg.com/media/DJm3BvbXkAAuMzp.jpg"
            size_hint_y: 0.17
            allow_stretch: True
            keep_ratio: True
            pos_hint: {"center_x": 0.895, "center_y": 0.241}
        Label:
            id: EV2_name
            pos_hint: {"center_x": 0.894, "center_y": 0.12}
            text: 'EV2'
            markup: True
            color: 0,0,0
            font_size: 18
        AsyncImage:
            id: EVAimage
            source: "http://pbs.twimg.com/media/DJm3BvbXkAAuMzp.jpg"
            ##source: './imgs/eva/GuageBar.png'
            size_hint: 0.42, 0.38
            size_hint_max: 270, 220
            ##width: 700
            allow_stretch: False
            keep_ratio: True
            pos_hint: {"center_x": 0.187, "center_y": 0.655}
        Button:
            id: EVAimage_button
            size_hint_y: 0.38
            pos_hint: {"center_x": 0.185, "center_y": 0.655}
            font_size: 30
            opacity: 0.0
            on_release: app.root.current = 'eva_pictures'
        Label:
            id: EVAstatus  
            pos_hint: {"center_x": 0.19, "center_y": 0.34}
            size_hint: 0.365,0.36
            text: 'Fetching latest tweet...'
            text_size: self.width, None
            ##padding_y: (self.height - self.line_height)/2
            markup: True
            color: 1,1,1
            font_size: 16
        Label:
            id: EVAstatus_credit 
            pos_hint: {"center_x": 0.27, "center_y": 0.085}
            size_hint: 0.27,0.04
            text: 'from @iss101'
            text_size: self.width, None
            markup: True
            color: 1,1,1
            font_size: 14
        Label:
            id: EVA_clock
            pos_hint: {"center_x": 0.53, "center_y": 0.82}
            text: '0:00:00'
            size_hint_y: 0.5
            text_size: None, self.height
            markup: True
            color: 0,0,0
            font_size: 70
        Label:
            id: EV1
            pos_hint: {"center_x": 0.55, "center_y": 0.4}
            size_hint: 0.3,0.15
            text: 'EV1 Crewmember:'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EV1_EVAnum
            pos_hint: {"center_x": 0.55, "center_y": 0.35}
            size_hint: 0.3,0.15
            text: 'Number of EVAs = 0'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EV1_EVAtime
            pos_hint: {"center_x": 0.55, "center_y": 0.3}
            size_hint: 0.3,0.15
            text: 'Total EVA Time = 0:00'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EV2
            pos_hint: {"center_x": 0.55, "center_y": 0.22}
            size_hint: 0.3,0.15
            text: 'EV2 Crewmember:'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EV2_EVAnum
            pos_hint: {"center_x": 0.55, "center_y": 0.17}
            size_hint: 0.3,0.15
            text: 'Number of EVAs = 0'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EV2_EVAtime
            pos_hint: {"center_x": 0.55, "center_y": 0.12}
            size_hint: 0.3,0.15
            text: 'Total EVA Time = 0:00'
            text_size: self.width, None
            markup: True
            color: 0,0,0
            font_size: 18
        Label:
            id: EVA_occuring
            pos_hint: {"center_x": 0.57, "center_y": 0.76}
            size_hint: 0.35,0.35
            text: 'EVA Status'
            text_size: self.width, None
            markup: True
            color: 1,1,1
            font_size: 20
        Image:
            id: signal
            source: "./imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.05
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
            ##angle: 0
            ##canvas.before:
            ##    PushMatrix
            ##    Scale:
            ##        x: -1
            ##        y: 1
            ##        z: 1
            ##        origin: self.center
            ##canvas.after:
            ##    PopMatrix
        Button:
            size_hint: 0.1,0.1
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.32, "center_y": 0.085}
            background_normal: './imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: app.root.current = 'eva_main'
