#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<Orbit_Screen>:
    name: 'orbit'
    FloatLayout:
        Image:
            id: Orbit_background
            source: './imgs/unsorted/OrbitEweekBase.png'
            allow_stretch: False
        Image:
            id: latitude_background
            source: './imgs/eva/GuageBar.png'
            size_hint: 0.15, 0.05
            pos_hint: {"center_x": 0.12, "center_y": 0.22}
            allow_stretch: True
            keep_ratio: False
        Image:
            id: longitude_backround
            source: './imgs/eva/GuageBar.png'
            size_hint: 0.15, 0.05
            pos_hint: {"center_x": 0.13, "center_y": 0.185}
            allow_stretch: True
            keep_ratio: False
        AsyncImage:
            id: OrbitMap
            source: './imgs/orbit/map.jpg'
            pos_hint: {"center_x": 0.5, "center_y": 0.56}
            size_hint_y: 0.598
            allow_stretch: False
            keep_ratio: True
        Image:
            id: OrbitISStiny
            source: './imgs/orbit/OrbitYellowISSicon.png'
            keep_ratio: False
            allow_stretch: True
            size_hint: 0.07,0.07
            pos_hint: {"center_x": 0.888, "center_y": 0.888}
        Label:
            id: latitude
            pos_hint: {"center_x": 0.12, "center_y": 0.22}
            text: '0.00'
            markup: True
            color: 1,1,1
            font_size: 16
        Label:
            id: longitude
            pos_hint: {"center_x": 0.13, "center_y": 0.185}
            text: '0.00'
            markup: True
            color: 1,1,1
            font_size: 16
        Button:
            size_hint: 0.2,0.1
            pos_hint: {"center_x": 0.9, "center_y": 0.05}
            text: 'Return'
            font_size: 30
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            source: "./imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
