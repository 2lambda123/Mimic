<ECLSS_ACS_Screen>:
    name: 'acs'
    FloatLayout:
        Image:
            id: ECLSS_ACS_background
            source: f'{root.mimic_directory}/Mimic/Pi/imgs/eclss/ACSbackground.png'
            fit_mode: "fill"
        Label:
            id: LabPPN2
            pos_hint: {"center_x": 0.67, "center_y": 0.63}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Label:
            id: LabPPO2
            pos_hint: {"center_x": 0.67, "center_y": 0.6}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Label:
            id: LabPPCO2
            pos_hint: {"center_x": 0.67, "center_y": 0.57}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Label:
            id: N3PPN2
            pos_hint: {"center_x": 0.67, "center_y": 0.24}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Label:
            id: N3PPO2
            pos_hint: {"center_x": 0.67, "center_y": 0.21}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Label:
            id: N3PPCO2
            pos_hint: {"center_x": 0.67, "center_y": 0.18}
            text: '0.003'
            markup: True
            color: root.signalcolor
            size_hint_y: 0.25
            font_size: self.height * 0.10
        Button:
            size_hint: 0.1,0.11
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: f'{root.mimic_directory}/Mimic/Pi/imgs/eva/BackButton.png'
            on_release: app.root.current = 'eclss'
        Image:
            id: signal
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            fit_mode: "scale-down"
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
        Image:
            id: arduino
            source: f"{root.mimic_directory}/Mimic/Pi/imgs/signal/arduino_offline.png"
            size_hint_y: 0.15
            anim_delay: 0.2
            anim_loop: 0
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            fit_mode: "scale-down"
        Label:
            id: arduino_count
            pos_hint: {"center_x": 0.14, "center_y": 0.08}
            text: ''
            markup: True
            color: 1,1,1
            font_size: self.height * 0.3
            size_hint_y: 0.5
