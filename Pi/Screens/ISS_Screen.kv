#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<ISS_Screen>:
    name: 'iss'
    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.15, "center_y": 0.8}
            text: 'ISS Info'
            markup: True
            color: 1,0,1
            font_size: 30
        Label:
            id: velocity_label
            pos_hint: {"center_x": 0.15, "center_y": 0.35}
            text: 'Speed'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: velocity_value
            pos_hint: {"center_x": 0.15, "center_y": 0.29}
            text: '0.00'
            markup: True
            color: root.signalcolor
            font_size: 20
        Label:
            id: altitude_label
            pos_hint: {"center_x": 0.35, "center_y": 0.35}
            text: 'Altitude'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: altitude_value
            pos_hint: {"center_x": 0.35, "center_y": 0.29}
            text: '0.00'
            markup: True
            color: root.signalcolor
            font_size: 20
        Label:
            id: stationmass_label
            pos_hint: {"center_x": 0.65, "center_y": 0.35}
            text: 'Total Mass'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmass_value
            pos_hint: {"center_x": 0.65, "center_y": 0.29}
            text: '0.00 kg'
            markup: True
            color: root.signalcolor
            font_size: 20
        Label:
            id: stationmode_label
            pos_hint: {"center_x": 0.85, "center_y": 0.35}
            text: 'Station Mode'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: stationmode_value
            pos_hint: {"center_x": 0.85, "center_y": 0.29}
            text: ''
            markup: True
            color: root.signalcolor
            font_size: 20
        Button:
            size_hint: 0.1,0.11
            ##pos_hint: {"Left": 1, "Bottom": 1}
            pos_hint: {"center_x": 0.9375, "center_y": 0.082}
            background_normal: '/home/pi/Mimic/Pi/imgs/eva/BackButton.png'
            text: ''
            font_size: 30
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            source: "/home/pi/Mimic/Pi/imgs/signal/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
