#:kivy 1.8
#:import kivy kivy
#:import win kivy.core.window
<CT_Screen>:
    name: 'ct'
    FloatLayout:
        Label:
            pos_hint: {"center_x": 0.15, "center_y": 0.8}
            text: 'C&T Stuff'
            markup: True
            color: 1,0,1
            font_size: 30
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"Left": 1, "Bottom": 1}
            text: 'Return'
            font_size: 30
            on_release: app.root.current = 'mimic'
        Image:
            id: signal
            source: "./imgs/pulse-transparent.zip"
            size_hint_y: 0.15
            anim_delay: 0.12
            anim_loop: 0
            keep_ratio: True
            pos_hint: {"center_x": 0.05, "center_y": 0.07}
