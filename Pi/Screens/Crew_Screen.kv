<Crew_Screen>:
    name: 'crew'
    FloatLayout:
        Image:
            id: Crew_background
            source: '/home/pi/Mimic/Pi/imgs/crew/Crewbackground.png'
            allow_stretch: False 
        Label:
            id: ISS_crewed_years
            pos_hint: {"center_x": 0.95, "center_y": 0.75}
            text: '22'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: ISS_crewed_months
            pos_hint: {"center_x": 0.95, "center_y": 0.8}
            text: '6'
            markup: True
            color: 1,1,1
            font_size: 20
        Label:
            id: ISS_crewed_days
            pos_hint: {"center_x": 0.95, "center_y": 0.85}
